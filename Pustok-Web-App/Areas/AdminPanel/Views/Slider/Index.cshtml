
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
@model IEnumerable<Slider>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Title 1
                            </th>
                            <th>
                                Title 2
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Image
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    @(count++)
                                </td>
                                <td>
                                    @item.Title1
                                </td>
                                <td>
                                    @item.Title2
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.Image
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

